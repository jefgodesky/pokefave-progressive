{
  "name": "pokefave-progressive",
  "version": "1.0.0",
  "description": "What's your favorite Pok√©mon? (Progressive Enhancement Version)",
  "type": "module",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jefgodesky/pokefave-progressive.git"
  },
  "homepage": "https://github.com/jefgodesky/pokefave-progressive",
  "bugs": {
    "url": "https://github.com/jefgodesky/pokefave-progressive/issues"
  },
  "author": {
    "name": "Jason Godesky",
    "email": "jason@godesky.net",
    "url": "https://jason.godesky.net"
  },
  "license": "GPL-3.0-only",
  "main": "server/build/index.js",
  "scripts": {
    "start": "node server/build/index.js",
    "test": "npm-run-all server:test",
    "server:build": "npm-run-all server:clear server:compile server:templates server:assets server:sass",
    "server:clear": "rm -Rf server/build",
    "server:assets": "mkdir server/build/public && cp -R server/src/assets/* server/build/public",
    "server:templates": "cp -R server/src/views server/build",
    "server:compile": "npx tsc --project server/tsconfig.json",
    "server:lint": "ts-standard --project server/tsconfig.json",
    "server:mocha": "mocha -r ts-node/register server/src/**/*.spec.ts",
    "server:test": "npm-run-all server:lint server:mocha",
    "server:sass": "node server/src/sass.mjs"
  },
  "dependencies": {
    "@types/express": "^4.17.17",
    "axios": "^1.3.4",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "unobtrusive-dom": "^0.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/ejs": "^3.1.2",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.58.3",
    "ts-node": "^10.9.1",
    "ts-standard": "^12.0.2",
    "typescript": "^4.9.5"
  }
}
